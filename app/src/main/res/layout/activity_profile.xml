<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apps.hari.registration.ProfileActivity"
    android:background="@drawable/anna"
    >


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/buttonLogout"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            style="@android:style/Widget.Button.Inset" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write Confessions"
            android:id="@+id/Confessionbutton"
            android:onClick="confess"
            android:layout_marginTop="42dp"
            style="@android:style/Widget.Holo.Button.Small"
            android:layout_below="@+id/RecordBtn"
            android:layout_alignEnd="@+id/RecordBtn"
            android:layout_alignStart="@+id/RecordBtn" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Newsfeed"
            android:layout_below="@+id/imageView4"
            android:onClick="Blogger"
            android:layout_marginTop="49dp"
            android:id="@+id/button2"
            android:layout_alignEnd="@+id/Confessionbutton"
            android:layout_alignStart="@+id/Confessionbutton"
            style="@android:style/Widget.Holo.Button.Small" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/blog"
            android:layout_alignTop="@+id/button2"
            android:layout_alignStart="@+id/imageView4"
            android:id="@+id/imageView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hola"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#303F9F"
            android:textSize="28dp"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="46dp"

            android:id="@+id/textView2"
            android:layout_below="@+id/textViewUserEmail" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/pen"
            android:id="@+id/imageView4"
            android:layout_alignTop="@+id/Confessionbutton"
            android:layout_alignStart="@+id/imageView3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/micro"
            android:id="@+id/imageView3"
            android:layout_alignTop="@+id/RecordBtn"
            android:layout_toStartOf="@+id/RecordBtn"
            android:layout_marginEnd="11dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record your confession"
            android:id="@+id/RecordBtn"
            android:onClick="hello"
            android:layout_marginTop="79dp"
            style="@android:style/Widget.Holo.Button.Small"
            android:layout_marginEnd="43dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textViewUserEmail"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorAccent"
android:layout_marginLeft="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
</RelativeLayout>